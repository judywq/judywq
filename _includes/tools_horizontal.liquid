<div class="card-item col">
  <a href="{% if tool.redirect %}{{ tool.redirect }}{% else %}{{ tool.url | relative_url }}{% endif %}">
    <div class="card hoverable">
      <div class="row g-0">
        {% if tool.img %}
          <div class="card-img col-md-6">
            {% include figure.liquid loading="eager" path=tool.img sizes="(min-width: 768px) 156px, 50vw" alt="tool thumbnail" %}
          </div>
        {% endif %}
        <div class="{% if tool.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title text-lowercase">{{ tool.title }}</h3>
            <p class="card-text">{{ tool.description }}</p>
            <div class="row ml-1 mr-1 p-0">
              {% if tool.github %}
                <div class="github-icon">
                  <div class="icon" data-toggle="tooltip" title="Code Repository">
                    <a href="{{ tool.github }}"><i class="fa-brands fa-github gh-icon"></i></a>
                  </div>
                  {% if tool.github_stars %}
                    <span class="stars" data-toggle="tooltip" title="GitHub Stars">
                      <i class="fa-solid fa-star"></i>
                      <span id="{{ tool.github_stars }}-stars"></span>
                    </span>
                  {% endif %}
                </div>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
